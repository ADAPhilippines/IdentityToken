@page "/"
@page "/{Page}"


<div class="flex flex-col font-sans container bg-gray-400 overflow-hidden">
    <div class="flex flex-col justify-center w-full pt-64">
        <div class="text-8xl tracking-wide font-semibold text-primary text-center mb-6">Identity Token</div>
        <div class="text-5xl tracking-wide font-normal text-primary text-center mt-6 mb-12">On Cardano</div>
        <div class="justify-center mt-12 mb-12">
            <p class="w-7/12 text-xl tracking-wide leading-10 font-medium text-center mx-auto text-secondary">
                Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt 
                ut laoreet dolore magna aliquam erat volutpat.
            </p>
        </div>
        <div class="flex flex-col rounded-md w-8/12 bg-white mt-10 mx-auto overflow-hidden">
            <div class="flex w-full">
                <nav class="flex flex-grow relative z-0 shadow flex" aria-label="Tabs">
                    @if (Page == "mint")
                    {
                        <NavLink href="/mint" class="flex-grow group relative min-w-0 flex-1 overflow-hidden bg-white py-6 px-6 text-sm font-medium text-center hover:bg-gray-50 focus:z-10">
                            <span class="text-idt-indigo text-lg">Mint</span>
                            <span aria-hidden="true" class="bg-idt-indigo absolute inset-x-0 bottom-0 h-0.5"></span>
                        </NavLink>

                        <NavLink href="/demo" class="flex-grow group relative min-w-0 flex-1 overflow-hidden bg-white py-6 px-6 text-sm font-medium text-center hover:bg-gray-50 focus:z-10">
                            <span class="text-idt-gray text-lg">Demo</span>
                            <span aria-hidden="true" class="bg-transparent absolute inset-x-0 bottom-0 h-0.5"></span>
                        </NavLink>
                    }
                    else if (Page == "demo")
                    {
                        <NavLink href="/mint" class="flex-grow group relative min-w-0 flex-1 overflow-hidden bg-white py-6 px-6 text-sm font-medium text-center hover:bg-gray-50 focus:z-10">
                            <span class="text-idt-gray text-lg">Mint</span>
                            <span aria-hidden="true" class="bg-transparent absolute inset-x-0 bottom-0 h-0.5"></span>
                        </NavLink>

                        <NavLink href="/demo" class="flex-grow group relative min-w-0 flex-1 overflow-hidden bg-white py-6 px-6 text-sm font-medium text-center hover:bg-gray-50 focus:z-10">
                            <span class="text-idt-indigo text-lg">Demo</span>
                            <span aria-hidden="true" class="bg-idt-indigo absolute inset-x-0 bottom-0 h-0.5"></span>
                        </NavLink>
                    }
                </nav>
            </div>
            <div class="flex w-full">
                @if (Page == "mint")
                {
                    <Mint />
                }
                else
                {
                    <Demo />
                }
            </div>
        </div>
    </div>
    <div class="flex justify-center">
        <h3 class="text-7xl tracking-wide font-semibold text-center mt-20">For Developers</h3>
    </div>
</div>
